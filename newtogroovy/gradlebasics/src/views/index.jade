                backends 'html5'
                attributes 'source-highlighter' : 'prettify',
                        'imagesdir':'images',
                        'toc':'left',
                        'icons': 'font',
                        'setanchors':'true',
                        'idprefix':'',
                        'idseparator':'-',
                        'docinfo1':'true',
                        'snippets': snippetsDir
              }</code>
          section
